<div class="h-screen bg-base-200 pt-14 flex flex-col">

  <%= render "shared/breadcrumbs" %>

  <% content_for :title, "Courses" %>

  <div class="flex justify-between items-center p-4">
    <h1 class="font-bold text-4xl">Courses <%= @courses.count %></h1>
    <%= link_to "New course", new_course_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <!-- Contenedor scrollable -->
  <div id="courses" class="flex-1 overflow-y-auto min-w-full divide-y divide-gray-200 space-y-5 p-8">

  <% if @courses.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @courses.each do |course| %>
      <div class="border p-4 rounded">
        <%= render course %>
      </div>
    <% end %>
  </div>

<% end %>









