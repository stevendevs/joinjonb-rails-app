<div class="h-screen bg-base-200 pt-14 flex flex-col">

  <%= render "shared/breadcrumbs" %>

<% content_for :title, "Showing course" %>

<div class="md:w-2/3 w-full ">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center p-4">
    <h1 class="font-bold text-4xl">Course </h1>
    <%= link_to "back", root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <%= render @course %>


</div>
</div>
