<div class="w-full h-screen flex justify-center items-start pt-20 bg-gray-50">
  <div class="w-full max-w-md border rounded-xl shadow-lg p-6 bg-white">
    
    <div class="flex items-center space-x-2 mb-6 text-gray-800 text-xl font-semibold">
      <i class="fa fa-user text-blue-600"></i>
      <span><%= user.email %></span>
    </div>

    <div class="mb-4 text-sm text-gray-600">
      <span>Cuenta creada hace <%= time_ago_in_words(user.created_at) %></span>
    </div>

    <div class="mb-4 text-sm text-gray-700">
      <span class="font-semibold">Número de ingresos:</span>
      <span><%= user.sign_in_count %></span>
    </div>

    <div class="text-sm text-gray-700 space-y-2">
      <div>
        <span class="font-semibold">Último ingreso:</span>
        <span><%= user.last_sign_in_at.strftime("%Y-%m-%d %H:%M:%S") if user.last_sign_in_at %></span>
      </div>
      <div>
        <span class="font-semibold">IP del último ingreso:</span>
        <span><%= user.last_sign_in_ip %></span>
      </div>
      <div>
        <span class="font-semibold">Ingreso actual:</span>
        <span><%= user.current_sign_in_at.strftime("%Y-%m-%d %H:%M:%S") if user.current_sign_in_at %></span>
      </div>
      <div>
        <span class="font-semibold">IP actual:</span>
        <span><%= user.current_sign_in_ip %></span>
      </div>


      <div class="card-footer">
      Confirmed email? <%= user.confirmed? ? 'Yes' : 'No' %>
    </div>

    </div>
  </div>
</div>
